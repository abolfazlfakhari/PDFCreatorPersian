<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/ed_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:gravity="right|top"
        android:hint="متن خودراواردکنید"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@drawable/sh_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_get_pic"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="انتخاب عکس"
            android:background="@drawable/sh_btn"
            android:textStyle="bold"
            android:textColor="@color/white_color"/>

        <Button
            android:id="@+id/btn_create_pdf"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="ساخت PDF"
            android:textStyle="bold"
            android:background="@drawable/sh_btn"
            android:textColor="@color/white_color"
            />


    </LinearLayout>

</RelativeLayout>